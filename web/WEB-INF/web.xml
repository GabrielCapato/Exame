<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <filter>
        <filter-name>ConexaoFilter</filter-name>
        <filter-class>br.com.grupointegrado.filter.ConexaoFilter</filter-class>
    </filter>
    <filter>
        <filter-name>Trim</filter-name>
        <filter-class>br.com.grupointegrado.filter.Trim</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Trim</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ConexaoFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>indexServlet</servlet-name>
        <servlet-class>br.com.grupointegrado.servlets.ChatServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>indexServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
